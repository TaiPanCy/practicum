Rel(read_module_log_from_db,API,"JSON/HTTPS")
Rel(find_module_info_in_db,API,"JSON/HTTPS")
Rel(API,return_module_state,"JSON/HTTPS")
Rel(return_module_state,find_module_info_in_db,"JSON/HTTPS")
Rel(net_module_ping,API,"JSON/HTTPS")

