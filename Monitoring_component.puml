Container_Boundary(WarmHouseCore, "WWarmHouse ядро системы") {
 Container(MonitoringService, "Сервис отображения показателей и состояния модулей", "")
 Container(PingModuleService, "Сервис мониторинга доступности модулей", "")
 Container(LogService, "Сервис логирования", "")
 Container(API, "API SaaS приложения", "")
}
Container(PingModuleService, "Сервис мониторинга доступности модулей", "") {
  Component(net_module_ping, "ping", "тест сетевой дсотупности модуля")
  Component(write_module_log_to_log, "write_module_log", "сохранение результатов теста")
}
Container(MonitoringService, "Сервис отображения показателей и состояния модулей", "") {
  Component(read_module_log_from_log, "read_log", "Выгрузка логов по конкретному модулю")
  Component(return_module_state, "return_module_state", "Выдача состояние модуля")
}
Container(LogService, "Сервис логирования", "") {
  Component(find_module_info_in_db, "find_module_info_in_db", "Поиск информации по модулю в логах")
  Component(read_module_log_from_db, "read_module_log_from_db", "Выгрузка логов по конкретному модулю")
  Component(write_module_log_to_db, "write_module_log_to_db", "сохранение результатов теста") 
}

Rel(write_module_log_to_log,write_module_log_to_db,"JSON/HTTPS")
